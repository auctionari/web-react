{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@common": [
        "common/Common"
      ],
      "@style": [
        "common/Styled"
      ],
      "@layout/*": [
        "layout/*"
      ],
      "@view/*": [
        "view/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@util/*": [
        "util/*"
      ],
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
